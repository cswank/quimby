{{define "navbar"}}
  <div class="container">
    <div class="row">
      <div class="column column-75">
        <h1><a href="/gadgets">{{.Name}}</a></h1>
      </div>
      <div class="column column-25">
        <div class="dropdown">
          <span>Mouse over me</span>
          {{range $link := .Links}}
            {{template "menu-item" $link}}
          {{end}}
        </div>
      </div>
  </div>
{{end}}
